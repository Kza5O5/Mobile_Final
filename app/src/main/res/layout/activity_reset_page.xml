<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reset_Page"
    android:background="@drawable/background"
    >

    <ImageView
        android:id="@+id/banner"
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:background="@drawable/frontpic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        />
    <TextView
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="RESET PASSWORD"
        android:fontFamily="@font/robotofont"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/banner"
        android:layout_marginTop="55sp"
        />

    <EditText
        android:id="@+id/txtreset"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/curved_white"
        android:textColor="@android:color/black"
        android:hint="Enter Your Username"
        android:padding="15dp"
        android:textAlignment="textStart"
        android:alpha="0.9"
        android:layout_below="@+id/reset"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnreset"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="RESET"
        android:textSize="16sp"
        android:fontFamily="@font/robotofont"
        android:layout_below="@+id/txtreset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:background="@drawable/curved_btn"
        />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click To Back To"
        android:textColor="@color/black"
        android:layout_below="@id/btnreset"
        android:textSize="15sp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/gobacktologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/white"
        android:layout_alignLeft="@+id/txt"
        android:layout_below="@id/btnreset"
        android:textSize="15sp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>