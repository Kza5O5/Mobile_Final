<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".St_Home"
    android:background="@drawable/real"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/homebar"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/home_conor"
            android:backgroundTint="@color/main" />

        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME :"
            android:textColor="@color/white"
            android:fontFamily="@font/robotofont"
            android:textSize="24dp"
            android:layout_alignLeft="@+id/gotopfp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="135dp" />

        <EditText
            android:id="@+id/edtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name showhere"
            android:textSize="24sp"
            android:fontFamily="@font/robotofont"
            android:textColor="@color/white"
            android:layout_marginTop="70dp"
            android:layout_marginStart="235dp"
            android:background="@drawable/edit_text_no_underline"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID :"
            android:textColor="@color/white"
            android:fontFamily="@font/robotofont"
            android:textSize="24sp"
            android:layout_alignLeft="@+id/gotopfp"
            android:layout_below="@+id/txtname"
            android:layout_marginTop="20dp"
            android:layout_marginStart="135dp" />

        <EditText
            android:id="@+id/edtid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idshow here's"
            android:textSize="24sp"
            android:fontFamily="@font/robotofont"
            android:textColor="@color/white"
            android:layout_below="@+id/edtname"
            android:layout_marginStart="190dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_no_underline"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gotopfp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/homebar"
            android:layout_marginTop="-100dp"
            android:layout_marginStart="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pfp"
            app:shapeAppearanceOverlay="@style/circle" />

        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homebar"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="My Course"
            android:fontFamily="@font/robotofont"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/course"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"

                >

                <View
                    android:id="@+id/box1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/curve"
                    android:alpha="0.5" />

                <View
                    android:id="@+id/box2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/curve"
                    android:layout_marginStart="8dp"
                    android:alpha="0.5" />
                <View
                    android:id="@+id/box7"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_toEndOf="@id/box1"
                    android:background="@drawable/curve"
                    android:alpha="0.5"
                    android:layout_marginStart="8dp"
                    />

            </LinearLayout>

            <ImageButton
                android:id="@+id/gotomeeting"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/meeting"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="45dp"
                android:layout_marginTop="5dp"
                />
            <ImageButton
                android:id="@+id/gotomygrade"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/grade"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                />
            <ImageButton
                android:id="@+id/gotocourse"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/course"
                android:layout_marginStart="32dp"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Course"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_below="@+id/linear1"
            android:layout_marginTop="-30dp"
            android:layout_marginStart="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Grade"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_below="@+id/linear1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meeting"
            android:layout_marginEnd="50dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/linear1"
            android:layout_marginTop="-30dp"
            />

        <RelativeLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <View
                    android:id="@+id/box3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:alpha="0.5"
                    android:background="@drawable/curve" />

                <View
                    android:id="@+id/box5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_toEndOf="@id/box1"
                    android:alpha="0.5"
                    android:background="@drawable/curve"
                    android:layout_marginStart="8dp"/>

                <View
                    android:id="@+id/box4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:alpha="0.5"
                    android:background="@drawable/curve"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/gotonotification"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:background="@drawable/notification"
                android:layout_marginStart="40dp"
                android:alpha="0.9"
                android:layout_marginTop="15dp"
                />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/grivance"
                android:layout_marginEnd="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                />

            <ImageButton
                android:id="@+id/gotopermission"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/permission"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_below="@id/linear2"
            android:layout_marginTop="-30dp"
            android:layout_marginStart="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permission"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/linear2"
            android:layout_marginTop="-30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grivance"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_below="@+id/linear2"
            android:layout_marginTop="-30dp"
            android:layout_marginEnd="45sp"
            />

        <TextView
            android:id="@+id/classtoday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Class Today"
            android:textSize="24sp"
            android:fontFamily="@font/robotofont"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <View
            android:id="@+id/classupdate"
            android:layout_width="370dp"
            android:layout_height="135dp"
            android:layout_below="@id/classtoday"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/curve"
            android:alpha="0.5" />

<!--        <com.github.mikephil.charting.charts.PieChart-->
<!--            android:id="@+id/pieChart"-->
<!--            android:layout_width="90dp"-->
<!--            android:layout_height="90dp"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_below="@+id/classtoday"-->
<!--            android:layout_marginTop="50dp"-->
<!--            android:layout_marginEnd="60dp"-->
<!--            />-->

        <TextView
            android:id="@+id/txtclasstoday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Class Today is :"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/robotofont"
            android:layout_below="@id/classtoday"
            android:layout_marginTop="25dp"
            android:layout_marginStart="35dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CS 216"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/robotofont"
            android:layout_below="@id/classtoday"
            android:layout_marginTop="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="100dp"
            android:background="@drawable/edit_text_no_underline"
            />

        <EditText
            android:id="@+id/subjecttoday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile App Dev"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/robotofont"
            android:layout_below="@id/txtclasstoday"
            android:layout_marginStart="33dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_text_no_underline"
            />

        <TextView
            android:id="@+id/txttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time :"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/robotofont"
            android:layout_below="@id/subjecttoday"
            android:layout_marginStart="35dp"
            android:layout_marginTop="18dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:15 - 5:15"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/robotofont"
            android:layout_below="@id/subjecttoday"
            android:layout_marginStart="110dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_text_no_underline"
            />

        <RelativeLayout
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/classupdate"
            android:layout_marginTop="10dp"
            android:paddingStart="25dp"
            android:paddingEnd="20dp">

            <View
                android:id="@+id/box_a"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:alpha="0.5"
                android:background="@drawable/curve" />

            <TextView
                android:id="@+id/texthomework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homework"
                android:textColor="@color/black"
                android:fontFamily="@font/robotofont"
                android:textSize="16sp"
                android:layout_marginStart="49dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/gotohomework"
                />

            <ImageButton
                android:id="@+id/gotohomework"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/homework"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                />


            <View
                android:id="@+id/box_b"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_toEndOf="@id/box_a"
                android:alpha="0.5"
                android:background="@drawable/curve"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/textassigment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment"
                android:textColor="@color/black"
                android:fontFamily="@font/robotofont"
                android:textSize="16sp"
                android:layout_marginEnd="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/gotoassigment"/>

            <ImageButton
                android:id="@+id/gotoassigment"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="64dp"
                android:background="@drawable/assigment" />

        </RelativeLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="370dp"
            android:layout_height="380dp"
            android:layout_below="@id/button"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/poster"
            app:shapeAppearanceOverlay="@style/Roundedbanner" />

    </RelativeLayout>
</ScrollView>