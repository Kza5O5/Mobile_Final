<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".St_Home"
    android:background="@drawable/real"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/homebar"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/home_conor"
            android:backgroundTint="@color/main" />

        <TextView
            android:id="@+id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME :"
            android:textColor="@color/white"
            android:fontFamily="@font/robotofont"
            android:textSize="24dp"
            android:layout_alignLeft="@+id/gotopfp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="135dp" />

        <EditText
            android:id="@+id/edtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name showhere"
            android:textSize="24sp"
            android:fontFamily="@font/robotofont"
            android:textColor="@color/white"
            android:layout_marginTop="70dp"
            android:layout_marginStart="235dp"
            android:background="@drawable/edit_text_no_underline"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID :"
            android:textColor="@color/white"
            android:fontFamily="@font/robotofont"
            android:textSize="24sp"
            android:layout_alignLeft="@+id/gotopfp"
            android:layout_below="@+id/txtname"
            android:layout_marginTop="20dp"
            android:layout_marginStart="135dp" />

        <EditText
            android:id="@+id/edtid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idshow here's"
            android:textSize="24sp"
            android:fontFamily="@font/robotofont"
            android:textColor="@color/white"
            android:layout_below="@+id/edtname"
            android:layout_marginStart="190dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_no_underline"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gotopfp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@id/homebar"
            android:layout_marginTop="-110dp"
            android:layout_marginStart="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pfp"
            app:shapeAppearanceOverlay="@style/circle" />

        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homebar"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="My Course"
            android:fontFamily="@font/robotofont"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/course"
            android:layout_marginTop="10dp">

            <View
                android:id="@+id/box1"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:background="@drawable/curve"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/textmycourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course"
                android:textColor="@color/black"
                android:fontFamily="@font/robotofont"
                android:textSize="20sp"
                android:layout_marginStart="75dp" />

            <ImageButton
                android:id="@+id/gotocourse"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/textmycourse"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/course" />

            <View
                android:id="@+id/box2"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_toEndOf="@id/box1"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/curve"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/mygrande"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Grade"
                android:textColor="@color/black"
                android:fontFamily="@font/robotofont"
                android:textSize="20sp"
                android:layout_marginEnd="65dp"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:id="@+id/mygrade"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/mygrande"
                android:background="@drawable/grade"
                android:layout_marginEnd="65dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:layout_marginTop="20dp">

            <View
                android:id="@+id/box3"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:background="@drawable/curve"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/textpr"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Permission Request"
                android:textColor="@color/black"
                android:fontFamily="@font/robotofont"
                android:textSize="20sp"
                android:lineHeight="20dp"
                android:layout_marginStart="50dp"
                android:textAlignment="center" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/textpr"
                android:background="@drawable/notification"
                android:layout_marginStart="65dp"
                android:layout_marginTop="10dp"
                android:alpha="0.9"
                />

            <View
                android:id="@+id/box4"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_toEndOf="@id/box3"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/curve"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting"
                android:textColor="@color/black"
                android:fontFamily="@font/robotofont"
                android:textSize="20sp"
                android:layout_marginEnd="80dp"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/rating"
                android:background="@drawable/meeting"
                android:layout_marginEnd="65dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/classtoday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Class Today"
            android:textSize="25sp"
            android:fontFamily="@font/robotofont"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <View
            android:id="@+id/classupdate"
            android:layout_width="370dp"
            android:layout_height="170dp"
            android:layout_below="@id/classtoday"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/curve"
            android:alpha="0.5" />

<!--        <com.github.mikephil.charting.charts.PieChart-->
<!--            android:id="@+id/pieChart"-->
<!--            android:layout_width="125dp"-->
<!--            android:layout_height="125dp"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_below="@+id/classtoday"-->
<!--            android:layout_marginTop="60dp"-->
<!--            android:layout_marginEnd="45dp"-->
<!--            />-->

        <TextView
            android:id="@+id/txtclasstoday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Class Today is :"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/robotofont"
            android:layout_below="@id/classtoday"
            android:layout_marginTop="25dp"
            android:layout_marginStart="35dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CS 216"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/robotofont"
            android:layout_below="@id/classtoday"
            android:layout_marginTop="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp"
            android:background="@drawable/edit_text_no_underline"
            />

        <EditText
            android:id="@+id/subjecttoday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile App Dev"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/robotofont"
            android:layout_below="@id/txtclasstoday"
            android:layout_marginStart="33dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edit_text_no_underline"
            />

        <TextView
            android:id="@+id/txttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time :"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/robotofont"
            android:layout_below="@id/subjecttoday"
            android:layout_marginStart="35dp"
            android:layout_marginTop="25dp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:15 - 5:15"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/robotofont"
            android:layout_below="@id/subjecttoday"
            android:layout_marginStart="110dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edit_text_no_underline"
            />

        <RelativeLayout
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/classupdate"
            android:layout_marginTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="20dp">

            <View
                android:id="@+id/box_a"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/curve"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/texthomework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Homework"
                android:textColor="@color/black"
                android:fontFamily="@font/robotofont"
                android:textSize="20sp"
                android:layout_marginStart="40dp" />

            <ImageButton
                android:id="@+id/gotohomework"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/texthomework"
                android:background="@drawable/homework"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                />


            <View
                android:id="@+id/box_b"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_toEndOf="@id/box_a"
                android:layout_marginStart="20dp"
                android:background="@drawable/curve"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/textassigment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment"
                android:textColor="@color/black"
                android:fontFamily="@font/robotofont"
                android:textSize="20sp"
                android:layout_marginEnd="45dp"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/textassigment"
                android:background="@drawable/assigment"
                android:layout_marginEnd="53dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                />
            <View
                android:id="@+id/box_c"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_below="@id/box_a"
                android:layout_alignStart="@id/box_a"
                android:layout_marginTop="10dp"
                android:background="@drawable/curve"
                android:alpha="0.5" />

            <ImageButton
                android:id="@+id/gotopermission"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_below="@+id/textpermission"
                android:background="@drawable/permission"
                android:layout_marginStart="30dp"
                android:layout_marginTop="-10dp"
                />

            <TextView
                android:id="@+id/textpermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginTop="152dp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotofont"
                android:text="Permission"
                android:textSize="20dp" />
            <View
                android:id="@+id/box_d"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_below="@id/box_b"
                android:layout_alignStart="@id/box_b"
                android:layout_marginTop="10dp"
                android:background="@drawable/curve"
                android:alpha="0.5" />

            <TextView
                android:id="@+id/textgrievance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grievance"
                android:textColor="@color/black"
                android:fontFamily="@font/robotofont"
                android:textSize="20sp"
                android:layout_marginEnd="55dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="152dp"
                />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/textgrievance"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:background="@drawable/grivance" />

        </RelativeLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="370dp"
            android:layout_height="380dp"
            android:layout_below="@id/button"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/poster"
            app:shapeAppearanceOverlay="@style/Roundedbanner" />

    </RelativeLayout>
</ScrollView>